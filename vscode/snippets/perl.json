{
    "tmp": {
        "prefix": "tmp",
        "body": [
            "use strict;",
            "use warnings;",
            "",
            "my $$ans = 0;",
            "",
        ],
        "description": "first skelton"
    },
    "sort": {
        "prefix": "sort",
        "body": [
            "${1:my @sorted = }sort{$${2:a} <=> $${3:b}}${2: @ansv}",
        ],
        "description": "sort 1,2,3,4,5"
    },
    "sortd": {
        "prefix": "sortd",
        "body": [
            "${1:my @sorted = }sort{$${2:a} cmp $${3:b}}${4: @ansv}",
        ],
        "description": "sort dictionary 11,2,3,4,5"
    },
    "sortlen": {
        "prefix": "sortlen",
        "body": [
            "${1:my @sorted = }sort{length $${2:a} cmp length $${3:b} || $a cmp $b}${4:@ansv}",
        ],
        "description": "sort dictionary 11,2,3,4,5"
    },
    "sorth": {
        "prefix": "sorth",
        "body": [
            "${1:my @sorted = }sort{$$a->{${2:age}} <=> $$b->{${2:age}}}${3:%ansh}",
        ],
        "description": "sort hash"
    },
    "in": {
        "prefix": "in",
        "body": [
            "my $$z = <>;",
        ],
        "description": "input once"
    },
    "in2": {
        "prefix": "in2",
        "body": [
            "my($$x, $$y)=glob<>;",
        ],
        "description": "input twice"
    },
    "max": {
        "prefix": "max",
        "body": [
            "(sort{ $b <=> $a }${4:@ansv}[0]",
        ],
        "description": "output max"
    },
    "for": {
        "prefix": "for",
        "body": [
            "for (my $$i=${1:0}; $$i<${2:100}; $$i++) {",
            "   ${3:# code}",
            "}"
        ],
        "description": "for"
    },
    "forr": {
        "prefix": "forr",
        "body": [
            "for (my $$i=${1:100}; $$i<${2:0}; $$i--) {",
            "   ${3:# code}",
            "}"
        ],
        "description": "for reduce"
    },
    "if": {
        "prefix": "if",
        "body": [
            "if (${1:# condition}) {",
            "   ${2:# code}",
            "}"
        ],
        "description": "if"
    },
    "ifel": {
        "prefix": "ifel",
        "body": [
            "if (${1:# condition}) {",
            "   ${2:# code}",
            "} else {",
            "   ${3:# code}",
            "}"
        ],
        "description": "if"
    },
    "pr": {
        "prefix": "pr",
        "body": [
            "print${1};",
        ],
        "description": "if"
    },
    "pr2": {
        "prefix": "pr2",
        "body": [
            "print${1}.$\";",
        ],
        "description": "if"
    },
