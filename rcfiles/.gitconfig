[user]
	name       = ryuta69
	email      = eyma22s.yu@gmail.com
	signingkey = 7EB4C638CC86724B
[core]
	editor = nvim
[color]
	ui = auto
[credential]
	helper = osxkeychain
[alias]
	ad  = add
	ada = add -A
	al  = alias
	br  = branch
	bra = branch -A
	cm  = commit
	co  = checkout
	cob = checkout -b
	df  = diff
	dfh = diff HEAD
	dft = difftool
	lg  = log
	lgp = log -p
	lgs = log -stat
	lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	mt  = mergetool
	st  = status
 	ps  = !git push origin `git rev-parse --abbrev-ref HEAD`
	pl  = !git pull origin `git rev-parse --abbrev-ref HEAD`
	rb  = rebase
	rf  = reflog --date=iso
	rs  = reset
[commit]
	gpgsign = true
[gpg]
	program = gpg2
[pager]
	log  = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[diff]
	tool                = vimdiff
	prompt              = false
	algorithm           = histogram
	compactionHeuristic = true
[difftool]
	prompt = false
[difftool "vimdiff"]
	path   = nvim
[merge]
	ff            = false
	tool          = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[mergetool "vimdiff"]
	path   = nvim
[pull]
	ff = only
[ghq]
	root = ~/.ghq
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
